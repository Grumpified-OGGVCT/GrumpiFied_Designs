---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'GrumpiFied Designs - Custom Merchandise' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Spreadshop Configuration (must load before shopclient script) -->
    <script is:inline>
      window.spread_shop_config = {
        shopName: 'grumpified',
        locale: 'us_US',
        prefix: 'https://grumpified.myspreadshop.com',
        baseId: 'myShop'
      };
    </script>
    
    <!-- Spreadshop Script -->
    <script 
      is:inline
      src="https://grumpified.myspreadshop.com/shopfiles/shopclient/shopclient.nocache.js"
      type="text/javascript"
    ></script>
  </head>
  <body>
    <slot />
    
    <style is:global>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      }

      body {
        background-color: #111;
        color: white;
        line-height: 1.6;
      }

      a {
        color: white;
        text-decoration: none;
      }

      a:hover {
        opacity: 0.8;
      }

      /* Override Spreadshop's default styling - but don't hide products! */
      #myShop {
        background: transparent !important;
        padding: 0 !important;
      }

      /* Make text white where possible */
      #myShop * {
        color: white !important;
      }

      /* Style product grid */
      #myShop .spread-shop-product,
      #myShop [class*="product"],
      #myShop [class*="Product"] {
        background: #1a1a1a !important;
        border: 1px solid #333 !important;
        border-radius: 8px !important;
        transition: transform 0.2s, box-shadow 0.2s !important;
      }

      #myShop .spread-shop-product:hover,
      #myShop [class*="product"]:hover {
        transform: translateY(-4px) !important;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3) !important;
      }
    </style>
  </body>
</html>
