---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'GrumpiFied Designs - Custom Merchandise' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Spreadshop Configuration (must load before shopclient script) -->
    <script is:inline>
      window.spread_shop_config = {
        shopName: 'grumpified',
        locale: 'us_US',
        prefix: 'https://grumpified.myspreadshop.com',
        baseId: 'myShop'
      };
    </script>
    
    <!-- Spreadshop Script -->
    <script 
      is:inline
      src="https://grumpified.myspreadshop.com/shopfiles/shopclient/shopclient.nocache.js"
      type="text/javascript"
    ></script>
  </head>
  <body>
    <slot />
    
    <style is:global>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      }

      body {
        background-color: #111;
        color: white;
        line-height: 1.6;
      }

      a {
        color: white;
        text-decoration: none;
      }

      a:hover {
        opacity: 0.8;
      }

      /* Override Spreadshop's default styling - but don't hide products! */
      #myShop {
        background: transparent !important;
        padding: 0 !important;
      }

      /* Make text white, but be very selective - don't touch color swatches */
      #myShop p:not([class*="color"]):not([class*="swatch"]),
      #myShop a:not([class*="color"]):not([class*="swatch"]),
      #myShop h1:not([class*="color"]):not([class*="swatch"]),
      #myShop h2:not([class*="color"]):not([class*="swatch"]),
      #myShop h3:not([class*="color"]):not([class*="swatch"]),
      #myShop h4:not([class*="color"]):not([class*="swatch"]),
      #myShop h5:not([class*="color"]):not([class*="swatch"]),
      #myShop h6:not([class*="color"]):not([class*="swatch"]),
      #myShop label:not([class*="color"]):not([class*="swatch"]),
      #myShop button:not([class*="color"]):not([class*="swatch"]):not([role="button"][aria-label*="color"]) {
        color: white !important;
      }

      /* CRITICAL: Never touch color swatches - preserve their original colors */
      #myShop [class*="color"],
      #myShop [class*="Color"],
      #myShop [class*="swatch"],
      #myShop [class*="Swatch"],
      #myShop [role="button"][aria-label*="color"],
      #myShop [role="button"][aria-label*="Color"],
      #myShop button[aria-label*="color"],
      #myShop button[aria-label*="Color"],
      #myShop [style*="background-color"]:not([style*="rgb(255"]):not([style*="#fff"]):not([style*="white"]):not([style*="transparent"]),
      #myShop circle,
      #myShop svg,
      #myShop [fill],
      #myShop [style*="fill"] {
        color: unset !important;
        background-color: unset !important;
        fill: unset !important;
      }

      /* Preserve all SVG and circle colors completely */
      #myShop svg *,
      #myShop circle *,
      #myShop [class*="color"] *,
      #myShop [class*="swatch"] * {
        color: unset !important;
        fill: unset !important;
        background-color: unset !important;
      }

      /* Hide Spreadshop's default navigation menu since we have our own */
      #myShop > div > div:first-child > div:nth-child(2),
      #myShop nav[class*="navigation"],
      #myShop [class*="Navigation"],
      #myShop [class*="main-nav"],
      #myShop [class*="MainNav"] {
        display: none !important;
      }

      /* Style product grid */
      #myShop .spread-shop-product,
      #myShop [class*="product"],
      #myShop [class*="Product"] {
        background: #1a1a1a !important;
        border: 1px solid #333 !important;
        border-radius: 8px !important;
        transition: transform 0.2s, box-shadow 0.2s !important;
      }

      #myShop .spread-shop-product:hover,
      #myShop [class*="product"]:hover {
        transform: translateY(-4px) !important;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3) !important;
      }
    </style>
  </body>
</html>
